<h1>Listing albums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Publish</th>
      <th>Free</th>
      <th>User</th>
      <th>Url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>

        <td>  <%= image_tag album.avatar.url , size: "100x80" %></td>

        <td><%= album.title %></td>
        <td><%= album.text %></td>
        <td><%= album.publish %></td>
        <td><%= album.free %></td>
        <td><%= album.user %></td>
        <td><%= album.url %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

